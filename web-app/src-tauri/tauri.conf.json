{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:9000",
    "distDir": "../dist/spa",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "pristimed-desktop",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": false,
        "hide": false,
        "show": false
      },
      "shell": {
        "all": false,
        "sidecar": true,
        "scope": [
          { "name": "binaries/my-sidecar", "sidecar": true }
        ],
        "execute": false
      },
      "fs": {
        "all": false,
        "scope": {
          "allow": ["$APP/*"],
          "deny": ["/**"]
        },
        "writeFile": true
      },
     "http": {
      "all": false,
      "request": false,
      "scope": []
     }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "binaries/my-sidecar"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.web-app-tauri-test.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
       "csp": "default-src 'self'; script-src 'self'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "pristimed",
        "width": 1400
      }
    ]
  }
}
